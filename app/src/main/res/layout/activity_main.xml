<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor"
    tools:context=".activities.MainActivity" >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="-50dp"
        app:cardBackgroundColor="@color/cardBackground"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_main_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/homeSelected"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_menu_selected_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/statisticsSelected"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/statisticsSelected"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_menu_selected_item"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/savingsSelected"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/homeSelected"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/savingsSelected"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_menu_selected_item"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/settingsSelected"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/statisticsSelected"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/settingsSelected"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_menu_selected_item"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/savingsSelected"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingVertical="12.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_house_solid"
            app:layout_constraintBottom_toBottomOf="@+id/homeSelected"
            app:layout_constraintEnd_toEndOf="@+id/homeSelected"
            app:layout_constraintStart_toStartOf="@+id/homeSelected"
            app:layout_constraintTop_toTopOf="@+id/homeSelected" />

        <ImageView
            android:id="@+id/statisticsIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingVertical="12.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_chart_pie_solid"
            app:layout_constraintBottom_toBottomOf="@+id/statisticsSelected"
            app:layout_constraintEnd_toEndOf="@+id/statisticsSelected"
            app:layout_constraintStart_toStartOf="@+id/statisticsSelected"
            app:layout_constraintTop_toTopOf="@+id/statisticsSelected" />

        <ImageView
            android:id="@+id/savingsIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingVertical="12.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_piggy_bank_solid"
            app:layout_constraintBottom_toBottomOf="@+id/savingsSelected"
            app:layout_constraintEnd_toEndOf="@+id/savingsSelected"
            app:layout_constraintStart_toStartOf="@+id/savingsSelected"
            app:layout_constraintTop_toTopOf="@+id/savingsSelected" />

        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingVertical="12.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_gear_solid"
            app:layout_constraintBottom_toBottomOf="@+id/settingsSelected"
            app:layout_constraintEnd_toEndOf="@+id/settingsSelected"
            app:layout_constraintStart_toStartOf="@+id/settingsSelected"
            app:layout_constraintTop_toTopOf="@+id/settingsSelected" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:name="com.andriibryliant.moneyflow.fragments.HomeFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/addTransactionButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="-25dp"
        android:background="@drawable/bg_purple_circle_gradient"
        android:foreground="?android:attr/selectableItemBackground"
        android:clipToOutline="true"
        android:clickable="true"
        android:focusable="true"
        android:elevation="5dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_plus_solid_full"
        app:layout_constraintBottom_toTopOf="@+id/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>