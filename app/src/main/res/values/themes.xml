<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MoneyFlow" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/WindowTransitionAnimation</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="colorPrimary">@color/purplePrimary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MoneyFlow" parent="Base.Theme.MoneyFlow" />

    <style name="WindowTransitionAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_bottom</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_top</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_top</item>
    </style>
</resources>